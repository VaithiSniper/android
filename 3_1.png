//        }
//        else {
//            Toast.makeText(this, "Password doesn't meet constraints", Toast.LENGTH_LONG).show();
//        }
//    }

    boolean validatePassword (View v, String passwd) {
        if(passwd.length() < 8) {
            return false;
        }
        String regexPattern = "(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[<>/@%$+=])(?=.*\\S+$).{8,}$";
        Pattern rp = Pattern.compile(regexPattern);
        Matcher m = rp.matcher(passwd);
        return m.matches();
    }
}